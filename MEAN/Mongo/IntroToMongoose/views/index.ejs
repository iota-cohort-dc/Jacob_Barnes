<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Intro to Mongoose</title>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type ="text/javascript">
    $(document).ready(function (){
        var socket = io.connect();
        $('#button').click(function (){
          //send that button was pushed
          socket.emit("button_clicked");
      });
      $('#reset').click(function (){
        //send that button was pushed
        socket.emit("reset_clicked");
    });
      socket.on('server_response', function (data){
        $("#catchData").html('The button has been pushed: ' + data.response + ' time(s).')
      });

    });
    </script>
    </head>
  <body>
    <% for (var i = 0; i < users.length; i++)  { %>
      <ul>
        <li><%= users[i].name %> <%= users[i].age %></li>
      </ul>
    <% } %>
    <h2>Form</h2>
    <form action="/users" method="post">
        <p>Name: <input type="text" name="name"></p>
        <p>Age: <input type="text" name="age"></p>
        <p><input type="submit" name="" value="Submit"></p>
    </form>

  </body>
</html>
