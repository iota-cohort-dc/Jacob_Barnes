<h1>Sign In</h1>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
		<%= e %>
	<% end %>
<% end %>

<form action="/login" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"
	<p>
		<label>name:</label>
		<input type="text" name="name" id="name">
	</p>
	<input type="submit" value="Sign In">
</form>
